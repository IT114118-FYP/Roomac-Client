{
  "name": "roomac-client",
  "description": "roomac-client",
  "author": "it114118-fyp",
  "homepage": "./",
  "main": "./public/electron.js",
  "version": "1.3.0",
  "private": true,
  "devDependencies": {
    "concurrently": "^6.0.2",
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "@fullcalendar/daygrid": "^5.5.0",
    "@fullcalendar/interaction": "^5.5.0",
    "@fullcalendar/react": "^5.5.0",
    "@fullcalendar/timegrid": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "algoliasearch": "^4.8.6",
    "antd": "^4.9.4",
    "axios": "^0.21.0",
    "electron-is-dev": "^2.0.0",
    "geolib": "^3.3.1",
    "i18next": "^19.8.4",
    "i18next-browser-languagedetector": "^6.0.1",
    "is-electron": "^2.2.0",
    "moment": "^2.29.1",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.1",
    "react-avatar-edit": "^1.0.0",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.5",
    "react-icons": "^4.1.0",
    "react-instantsearch-dom": "^6.10.3",
    "react-markdown": "^5.0.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "edev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "ebuild": "./node_modules/.bin/electron-builder -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "productName": "Roomac",
    "appId": "com.roomac",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "build/roomac.ico"
    },
    "nsis": {
      "installerIcon": "build/roomac.ico",
      "installerHeaderIcon": "build/roomac.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "12.x"
  }
}
